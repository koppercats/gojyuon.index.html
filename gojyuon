        // ボタンを作成
        const buttonsContainer = document.getElementById('buttons');
        hiraganaList.forEach(h => {
            const btn = document.createElement('button');
            btn.textContent = h;
            btn.addEventListener('click', () => showWords(h));
            buttonsContainer.appendChild(btn);
        });

        // 単語を表示する関数
        function showWords(hiragana) {
            const words = wordDict[hiragana];
            if (words && words.length > 0) {
                // ランダムで5つ選ぶ
                const selected = [];
                const indices = new Set();
                while (selected.length < Math.min(5, words.length)) {
                    const idx = Math.floor(Math.random() * words.length);
                    if (!indices.has(idx)) {
                        indices.add(idx);
                        selected.push(words[idx]);
                    }
                }
                document.getElementById('result').textContent = `${hiragana}から始まる単語: ${selected.join(', ')}`;
            } else {
                document.getElementById('result').textContent = `${hiragana}から始まる単語が見つかりません`;
            }
        }
    </script>
</body>
</html>
